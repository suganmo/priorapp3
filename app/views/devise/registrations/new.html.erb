<h2 class="offset-5"><%= t('.sign_up') %></h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div style="margin-left: 490px", class="col-3">
  <%= render "devise/shared/error_messages", resource: resource %>
  </div>
  <div class="col-2 offset-5">
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class:"form-control form-control-sm", style:"width: 200px" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-control-sm", style:"width: 200px"  %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control form-control-sm", style:"width: 200px"  %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-sm", style:"width: 200px"  %>
  </div>

  <div class="actions rnew">
    <%= f.submit t('.sign_up'), class: 'btn btn-primary btn-sm'%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>

