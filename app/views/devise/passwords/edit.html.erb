<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div style="width: 200px",class="form-group">
    <%= f.label :password, "New password" %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class:"form-control form-control-sm", style:"width: 200px" %>
  </div>

  <div style="width: 200px",class="form-group">
    <%= f.label :password_confirmation, "Confirm new password" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control form-control-sm", style:"width: 200px" %>
  </div>

  <div class="actions">
    <%= f.submit "Change my password", class: 'btn btn-primary btn-sm' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
